{{!
    @template block_deft/view

    This template renders tasks in the content for the deft response block.

    Example context (json):
    {
        "tasks": [
        ]
    }
}}
<div id="deft-view-{{uniqid}}"
     data-modified="{{ lastmodified }}"
     data-region="deft-view">
    <div data-region="deft-view-content">
        {{# tasks }}
           <div data-task="{{ id }}" data-type="{{ type }}">
              {{# choice }}{{> block_deft/choice }}{{/ choice }}
              {{# comments }}{{> block_deft/comments }}{{/ comments }}
              {{# text }}{{> block_deft/text }}{{/ text }}
              {{# venue }}{{> block_deft/venue }}{{/ venue }}
           </div>
        {{/ tasks }}
    </div>
</div>
