{{!
    @template block_deft/venue_manager

    This template renders the main venue window page

    Example context (json):
    {
        "contextid": 2,
        "iceservers": "[]",
        "peerid": 109,
        "peers": "[105, 106]",
        "token": "dladfjlakerlaa3j4lr",
        "throttle": 100,
        "uniqueid": "eworio"
    }
}}

<div id="block-deft-{{uniqid}}" class="block-deft block-cards" data-region="deft-venue">
    {{# canuse }}<a href="{{ manageurl }}" class="btn btn-secondary">{{# str }} manage, block_deft {{/ str }}</a>{{/ canuse }}
    <div class="container-fluid p-0" data-peerid="{{ peerid }}">
        <div class="row">
            {{# user }}
                    <div class="card col-3 p-2">
                    {{# picture }}
                        <img src="{{ pictureurl }}" class="img-fluid rounded-circle">
                    {{/ picture }}
                    {{^ picture }}
                        {{{ avatar }}}
                    {{/ picture }}
                    </div>
                    <div class="card col-9">
        <h5 class="text-center">
            {{ fullname }}
        </h5>
        <h3 class="text-center">
            <a href="#" class="card-link m-0 p-2 bg-secondary rounded-circle" data-action="mute" title="{{# str }} mute, block_deft {{/ str }}"><i class="icon m-0 fa fa-microphone bg-secondary rounded-circle"></i></a><a href="#" class="card-link hidden m-0 p-2 bg-warning rounded-circle" data-action="unmute" title="{{# str }} unmute, block_deft {{/ str }}"><i class="icon fa fa-microphone-slash m-0"></i></a>
            <a href="#" class="card-link m-0 p-2 bg-secondary rounded-circle" data-action="raisehand" title="{{# str }} raisehand, block_deft {{/ str }}"><i class="icon fa fa-hand-grab-o m-0"></i></a><a href="#" class="card-link hidden m-0 p-2 bg-warning rounded-circle" data-action="lowerhand" title="{{# str }} lowerhand, block_deft {{/ str }}"><i class="icon fa fa-hand-stop-o m-0"></i></a>
        </h3>
                    </div>
            {{/ user }}
        </div>
    </div>
    <div class="container-fluid">
        <div id="deft_audio" class="row p-0">
        </div>
    </div>
</div>
{{#js}}
    require(['block_deft/venue_manager', 'core/adapter'], function(VenueManager) {
        VenueManager.init({{ contextid }}, '{{ token }}', {{ peers }}, {{ peerid }}, {{{ iceservers }}});
    });
{{/js}}
