{{!
    @template block_deft/janus_room

    This template renders the main venue window page

    Example context (json):
    {
        "autogaincontrol": true,
        "contextid": 2,
        "echocancellation": true,
        "iceservers": "[]",
        "intro": "Hello world",
        "noisesuppression": true,
        "peerid": 109,
        "peers": "[105, 106]",
        "samplerate": 11025,
        "title": "Venue",
        "token": "dladfjlakerlaa3j4lr",
        "throttle": 100,
        "uniqueid": "eworio"
    }
}}
            {{# enablevideo }}
                <div class="col col-12">
                    <video id="deft_venue_remote_video" width="100%" controls autoplay class="hidden"></video>
                </div>
            {{/ enablevideo }}
        <div id="deft_audio" class="row p-0"></div>
        <div id="room" class="hidden">
            <audio class="rounded centered" id="roomaudio" autoplay></audio>
        </div>
{{#js}}
    require([
        'block_deft/venue_manager',
    ], function(VenueManager) {
        new VenueManager({{ contextid }}, '{{ token }}', {{ peers }}, {{ peerid }}, {{{ iceservers }}}, {{ autogaincontrol }}, {{ echocancellation }}, {{ noisesuppression }}, {{ samplerate }}, '{{ room }}', '{{ server }}');
});
{{/js}}
