{{!
    @template block_deft/venue_user

    This template renders card content to display user in a venue

    Example context (json):
    {
        "peerid": 2,
        "user": {
        },
        "fullname": "Forrest Gump"
    }
}}

<div id="deft-venue-peer-{{peerid}}" data-peerid="{{ peerid }}" class="card col" data-region="deft-meet">
    {{# user }}
        {{# picture }}
            <img src="{{ pictureurl }}" class="card-img-top rounded-circle">
        {{/ picture }}
        {{^ picture }}
            {{{ avatar }}}
        {{/ picture }}
        <div class="card-body">
            <div class="card-body">
                <div class="card-title">
                    <h5 class="card-title text-center">
                    {{ fullname }}
                    </h5>
                </div>
                <div class="card-text">
                    <p class="h3">
                        {{# manage }}
                            <a href="#" class="card-link m-0" data-action="mute" title="{{# str }} mute, block_deft {{/ str }}"><i class="icon fa fa-microphone"></i></a>
                        {{/ manage }}
                        {{^ manage }}
                            <span class="card-link m-0" data-action="mute" title="{{# str }} mute, block_deft {{/ str }}"><i class="icon fa fa-microphone"></i></span>
                        {{/ manage }}
                        <span class="card-link hidden m-0 p-0 bg-warning rounded-circle" data-action="unmute" title="{{# str }} unmute, block_deft {{/ str }}"><i class="icon fa fa-microphone-slash m-0"></i></span>
                        <span class="card-link m-0" data-action="raisehand" title="{{# str }} raisehand, block_deft {{/ str }}"><i class="icon fa fa-hand-grab-o"></i></span><span class="card-link hidden m-0 p-0 bg-warning rounded-circle" data-action="lowerhand" title="{{# str }} lowerhand, block_deft {{/ str }}"><i class="icon fa fa-hand-stop-o m-0"></i></span>
                    </p>
                </div>
            </div>
        </div>
    {{/ user }}
</div>
<div class="hidden">
    <audio autoplay></audio>
</div>
