{{!
    @template block_deft/main

    This template renders the main content area for the deft choice block.

    Example context (json):
    {
        "contextid": 2,
        "uniqueid": "eworio",
        "token": "dladfjlakerlaa3j4lr",
        "throttle": 100
    }
}}

<div id="block-deft-{{uniqid}}" class="block-deft block-cards" data-region="deft-main">
    {{# canuse }}<a href="{{ manageurl }}" class="btn btn-secondary">{{# str }} manage, block_deft {{/ str }}</a>{{/ canuse }}
    <div class="container-fluid p-0">
        {{> block_deft/view }}
    </div>
</div>
{{#js}}
    require(['block_deft/comment', 'block_deft/refresh'], function(Comment, Refresh) {
        var refresh = new Refresh({{ contextid }}, '#block-deft-{{uniqid}} [data-region="deft-view"]', '{{ token }}', {{ throttle }});
        Comment.init({{ contextid }}, '#block-deft-{{uniqid}}', refresh);
    });
{{/js}}
