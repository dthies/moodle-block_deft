{{!
    @template block_deft/venue_manager

    This template renders the volume indicator in venue

    Example context (json):
    {
        "peerid": 109
    }
}}

<div class="volume_indicator text-center" data-peerid="{{ peerid }}">
    <div class="bg-warning pl-3 pr-3 pt-1 pb-0 m-1 d-inline low" style="opacity: 0;"> </div>
    <div class="bg-warning pl-3 pr-3 pt-1 pb-0 m-1 d-inline mid" style="opacity: 0;"> </div>
    <div class="bg-warning pl-3 pr-3 pt-1 pb-0 m-1 d-inline high" style="opacity: 0;"> </div>
</div>
